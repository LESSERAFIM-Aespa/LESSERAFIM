<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/scrap_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blog_toolbar_title"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    >

    <androidx.appcompat.widget.SearchView
        android:id="@+id/scrap_SearchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/scrap_content_outline"
        app:layout_constraintBottom_toTopOf="@+id/scrap_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="검색하기" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scrap_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrap_SearchView"
        tools:listitem="@layout/scraptitems" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrap_imagelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrap_SearchView">
        <FrameLayout
            android:id="@+id/scrap_imageframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/scrap_imagelayout"
            app:layout_constraintEnd_toEndOf="@+id/scrap_imagelayout"
            app:layout_constraintStart_toStartOf="@+id/scrap_imagelayout"
            app:layout_constraintTop_toTopOf="@+id/scrap_imagelayout">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/scrap_imagesearch_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/addimage"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/search"
                android:layout_gravity="bottom|end"/>
        </FrameLayout>
        <TextView
            android:id="@+id/scrap_imagesearch_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이곳은 어떤가요?"
            app:layout_constraintEnd_toEndOf="@+id/scrap_imagelayout"
            app:layout_constraintStart_toStartOf="@+id/scrap_imagelayout"
            app:layout_constraintTop_toBottomOf="@+id/scrap_imageframe"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ProgressBar
        android:id="@+id/scrap_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
