<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/budget_statistics_category_color_view"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_budget_view_type4"
        app:layout_constraintBottom_toBottomOf="@+id/budget_statistics_category_data_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/budget_statistics_category_data_textview" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/budget_statistics_category_name_textview"
        android:textSize="16dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/budget_statistics_category_data_textview"
        app:layout_constraintEnd_toStartOf="@+id/budget_statistics_category_data_textview"
        app:layout_constraintStart_toEndOf="@+id/budget_statistics_category_color_view"
        app:layout_constraintTop_toTopOf="@+id/budget_statistics_category_data_textview"
        tools:text="교통비" />

    <TextView
        android:id="@+id/budget_statistics_category_data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:maxLines="1"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="31%, 1,000,000원" />
    
    
</androidx.constraintlayout.widget.ConstraintLayout>