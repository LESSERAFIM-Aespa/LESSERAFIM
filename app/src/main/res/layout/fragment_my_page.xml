<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context=".ui.mypage.home.MyPageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mypage_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">

        <TextView
            style="@style/MypageToolbarTextApperance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mypage_toolbar_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="end"
            android:id="@+id/mypage_setting"
            android:layout_marginHorizontal="7dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_setting" />

        <TextView
            android:layout_gravity="end"
            android:id="@+id/mypage_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/mypage_edit_text" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/mypage_profile_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_splash"
        app:layout_constraintBottom_toBottomOf="@id/mypage_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_image" />

    <LinearLayout
        android:id="@+id/mypage_profile_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mypage_profile_box"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingStart="40dp"
        app:layout_constraintBottom_toBottomOf="@id/mypage_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mypage_profile_image"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_image">

        <TextView
            android:id="@+id/mypage_profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Google ID(@뒷부분제외)" />

        <TextView
            android:id="@+id/mypage_profile_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2023년 9월 27일 가입" />

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:src="@color/Pink200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_toolbar" />

    <LinearLayout
        android:id="@+id/mypage_edit_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_profile_image">

        <TextView
            android:id="@+id/mypage_profile_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/mypage_profile_content_box" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/mypage_profile_content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:autofillHints="hint"
                android:background="@drawable/mypage_profile_content_box_edit"
                android:inputType="text"
                android:maxLength="30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mypage_profile_container" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/Gray"
                android:textStyle="bold"
                tools:text="30/30" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mypage_edit_cancel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/mypage_button_cancel"
                android:text="@string/mypage_edit_cancel"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mypage_edit_submit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/mypage_button_submit"
                android:text="@string/mypage_edit_submit"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/black" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>